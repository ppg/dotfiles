[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
#  token = <%#= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[credential]
  helper = osxkeychain

[alias]
  st = status -sb
  df = diff
  co = checkout
  ci = commit
  br = branch
  lg = log -p
  lol = log --graph --pretty=oneline --abbrev-commit --decorate
  lola = log --graph --pretty=oneline --abbrev-commit --decorate --all
  <% log_format = '%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' %>
  loln = log --graph --pretty=format:'<%= log_format %>' --abbrev-commit --decorate
  lolan = log --graph --pretty=format:'<%= log_format %>' --abbrev-commit --decorate --all

[color]
  diff = auto
  status = auto
  branch = auto

#[core]
#  autocrlf = true
#  safecrlf = false

<% meld_path = `which meld` %>
<% meld_path = nil if meld_path.empty? %>
<% if meld_path %>
[difftool.meld]
  path = <%= meld_path %>
[mergetool.meld]
  path = <%= meld_path %>
<% end %>
<% opendiff_path = `which opendiff` %>
<% opendiff_path = nil if opendiff_path.empty? %>
<% if opendiff_path %>
[difftool.opendiff]
  path = <%= opendiff_path %>
[mergetool.opendiff]
  path = <%= opendiff_path %>
<% end %>
<% tool = meld_path ? 'meld' : opendiff_path ? 'opendiff' : nil %>
[diff]
  tool = <%= tool %>
  guitool = <%= tool %>
[merge]
  tool = <%= tool %>
  guitool = <%= tool %>

