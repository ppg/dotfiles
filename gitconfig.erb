[alias]
  st = status -sb
  df = diff
  co = checkout
  ci = commit
  br = branch
  lg = log -p
  lol = log --graph --pretty=oneline --abbrev-commit --decorate
  lola = log --graph --pretty=oneline --abbrev-commit --decorate --all

[color]
  diff = auto
  status = auto
  branch = auto

#[core]
#  autocrlf = true
#  safecrlf = false

[diff]
  # Check for existance of meld before setting it as the diff
  <% unless `which meld` =~ /\A\s*\Z/ %>
    # Use meld for diff
    external = $HOME/.git/diff-meld.sh
  <% end %>

[push]
  default = tracking

[remote.origin]
  push = HEAD

[branch]
  autosetupmerge = true

